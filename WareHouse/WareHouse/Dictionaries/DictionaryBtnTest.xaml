<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WareHouse.Dictionaries">
    <ControlTemplate x:Key="BtnTest2" TargetType="{x:Type Button}">
        <Grid>
            <ContentPresenter Margin="20,0,0,0" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
            <Rectangle Width="15" HorizontalAlignment="Right" Margin="0,0,18,0">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Resources/IconArrow.png" Stretch="Uniform"/>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>