                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn behaviours:GridViewColumnResize.Width="*" Header="Цена" HeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle}" Width="Auto">
