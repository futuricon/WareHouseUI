                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn behaviours:GridViewColumnResize.Width="*" Header="Склад" HeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle}" Width="Auto">
                                    <!--DisplayMemberBinding="{Binding Amount}"-->
